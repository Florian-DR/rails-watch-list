<div class="banner" id="show_banner">
  <h1 class="container"><%= @list.name.capitalize %></h1>
</div>

<%= link_to "Back", lists_path, class: "btn btn-primary" %>
<hr>

<ul>
  <% @list.movies.each do |movie| %>
    <p><%= movie.title%> - rating : <%= movie.rating.to_f%>/10 - <%= link_to "delete", bookmark_path(movie.bookmarks.where(list_id: @list.id).first.id) ,data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%></p>
    <img alt="<%= movie.title%>" width="200" src="<%= movie.poster_url%>">
    <p><%= movie.overview%></p>
  <% end %>
</ul>

<hr>
<p><%= link_to  "Add a new movie to your list", new_list_bookmark_path(@list), class: "btn btn-primary"%></p>
